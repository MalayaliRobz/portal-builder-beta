<div class="flex">
  <LinkTo class="btn mt-10 flex" @route="full-preview-route">
    <svg width="20px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 13h8V7h-8V2l-8 8 8 8v-5z"/></svg>
  </LinkTo>
  <button class="btn ml-5 mt-10 mr-5 rounded" {{action "selectView" "layout"}} >
    Portal Layout
  </button>
  <button class="btn mt-10 rounded" {{action "selectView" "pages"}}>
    Portal pages
  </button>
</div>
{{#if layoutView}}
  <div>
    <h6 class="m-5">Head</h6>
    <p class="m-5 text-gray-800">Modify the head section of your portal html.</p>
    <div class="m-5">{{ember-ace lines=10 value=this.portalData.head}}</div>
    <CopyButton class="ml-5" @clipboardText={{this.portalData.head}}>Copy</CopyButton>
    <h6 class="m-5">Header</h6>
    <p class="m-5 text-gray-800">Change the header area of your support portal</p>
    <div class="m-5">{{ember-ace lines=10 value=this.headerLiquidTemplate}}</div>
    <CopyButton class="ml-5" @clipboardText={{this.headerLiquidTemplate}}>Copy</CopyButton>
    <h6 class="m-5">Footer</h6>
    <p class="m-5 text-gray-800">Change the footer area of your support portal</p>
    <div class="m-5">{{ember-ace lines=10 value=this.footerLiquidTemplate}}</div>
    <CopyButton class="ml-5" @clipboardText={{this.footerLiquidTemplate}}>Copy</CopyButton>
    <h6 class="m-5">Page Layout</h6>
    <p class="m-5 text-gray-800">Customize the entire layout of your support portal</p>
    <div class="m-5">{{ember-ace lines=10 value=this.portalData.layout}}</div>
    <CopyButton class="ml-5" @clipboardText={{this.portalData.layout}}>Copy</CopyButton>
  </div>
{{else}}
  <div class="flex">
    <div class="mt-5 w-1/6">
      {{#each-in pages as |key value|}}
        <a {{action "pageAction" key}} class="ml-5">{{value}}</a>
        <br>
      {{/each-in}}
    </div>
    <div class="p-5 w-5/6">
      {{ember-ace lines=30 value=this.pageString}}
      <CopyButton class="mt-5" @clipboardText={{pageString}}>Copy</CopyButton>
    </div>
  </div>
{{/if}}
