

    <FullPreview
      @customSrc={{this.fullPageSource}}
      @showComponentList=true
      @customClassNames="full-preview-class"/>

      {{#if showSidebar}}
        <div class="w-full absolute md:w-1/6 bg-gray-900 md:bg-gray-900 px-2 text-center fixed bottom-0 pt-2 md:top-0 md:left-0 h-16 md:h-screen md:border-r-4 md:border-gray-600">
          <a {{action "toggleSidebar"}}>
            <svg class="fill-current text-blue-500 h-6 w-6 float-right"xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zM11.4 10l2.83-2.83-1.41-1.41L10 8.59 7.17 5.76 5.76 7.17 8.59 10l-2.83 2.83 1.41 1.41L10 11.41l2.83 2.83 1.41-1.41L11.41 10z"/></svg></a>
          <div class="absolute mx-auto float-right px-6 mt-6">
            <ul class="list-reset flex flex-row md:flex-col text-center md:text-left">
              {{#each-in sidebarSection as |key value|}}
                <li class="mr-3 flex-1">
                  <a {{action "transitionToCurrentPage" key}} 
                    class="bg-transparent block py-1 md:py-3 pl-1 align-middle no-underline border-b-2 border-gray-900 hover:border-blue-500">
                    <span class="{{if (equals this.portalData.currentPage key) 'text-yellow-400 ' 'text-gray-400 '}} pb-1 pb-0 text-xs text-base inline-block">{{value}}</span>
                  </a>
                </li>
              {{/each-in}}
            </ul>
          </div>
        </div>
      {{else}}
        <div
            class="flex items-center absolute left-0 inset-y-auto">
          <a {{action "toggleSidebar"}}
              class="flex relative border-2 border-t-0 border-gray-900 bg-gray-400 p-2"
              style="transform: rotate(-90deg); transform-origin: left; left: 14px; top: -200px;">

            <svg width="14px" class="inline mx-1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 477.175 477.175" style="enable-background:new 0 0 477.175 477.175;" xml:space="preserve" data-ember-extension="1"><g transform="matrix(3.06162e-16 1 -1 3.06162e-16 477.175 -2.84217e-14)"><g>
              <path d="M360.731,229.075l-225.1-225.1c-5.3-5.3-13.8-5.3-19.1,0s-5.3,13.8,0,19.1l215.5,215.5l-215.5,215.5   c-5.3,5.3-5.3,13.8,0,19.1c2.6,2.6,6.1,4,9.5,4c3.4,0,6.9-1.3,9.5-4l225.1-225.1C365.931,242.875,365.931,234.275,360.731,229.075z   " data-original="#000000" class="active-path" fill="#000000"/>
            </g></g> </svg>
            
            <span class="mx-2">Portal Pages</span>
          </a>
        </div>
      {{/if}}
